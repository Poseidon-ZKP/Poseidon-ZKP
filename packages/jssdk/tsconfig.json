{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["esnext", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@poseidon-zkp/poseidon-zk-jssdk": ["src"],
      "@poseidon-zkp/poseidon-zk-jssdk/*": ["src/*"]
    },
    "skipLibCheck": true
  },

  "include": ["src", "types", ".*.js", "*.js", "*.ts"]
}
